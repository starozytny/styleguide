{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_app') }}
{% endblock %}

{% set layout_num = layout_num is defined ? layout_num :0 %}
{% set layout_position = layout_position is defined ? layout_position : "vertical" %}
{% set layout_type = layout_type is defined ? layout_type : "brut" %}

{% block body %}
    {% include "layout/components/page-loader.html.twig" %}

    <div class="layout-{{ layout_num }} layout-{{ layout_position }}-{{ layout_num }} {{ layout_type }}">
        <header>
            <div>
                <div class="header-logo">
                    <img src="{{ asset('build/app/images/logo.png') }}" alt="logo">
                </div>
            </div>
            <div>
                <div class="avatar">
                    <img src="https://robohash.org/random" alt="avatar">
                </div>
                <div class="btn-menu-mobile">
                    <button class="btn-icon"><span class="icon-menu-1"></span></button>
                </div>
            </div>
        </header>

        <nav>
            <div class="nav-menu">
                <div class="nav-menu-header">
                    <div class="nav-menu-header-logo">
                        <img src="{{ asset('build/app/images/logo.png') }}" alt="logo">
                    </div>
                    <div class="btn-menu-mobile">
                        <button class="btn-icon"><span class="icon-close"></span></button>
                    </div>
                </div>
                <div class="nav-menu-items">
                    <div>
                        {% for item in menu %}
                            <a class="nav-menu-item {{- app.request.get('_route') in item.matchRoute ? " active" : "" -}}"
                               href="{{ item.path }}"
                            >
                                {% if item.icon is defined %}<span class="icon-{{ item.icon }}"></span>{% endif %}
                                <span>{{ item.name }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </nav>

        <div class="body">
            <main>
                <div>
                    {% block main_content %}{% endblock %}
                </div>

                {% block footer %}{% endblock %}
            </main>
        </div>

        <footer>

        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_app') }}
{% endblock %}
