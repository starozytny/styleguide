{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_app') }}
{% endblock %}

{% set layout_num = layout_num is defined ? layout_num : 0 %}
{% set layout_position = layout_position is defined ? layout_position : "vertical" %}
{% set layout_type = layout_type is defined ? layout_type : "custom" %}

{% block body %}
    {% include "layout/components/page-loader.html.twig" %}

    {% if layout_num == 0 %}
        {% include "layout/layouts/layout-0.html.twig" with{main_content: block('main_content')} %}
    {% else %}
        {% include "layout/layouts/layout-1.html.twig" with{main_content: block('main_content')} %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_app') }}
{% endblock %}
